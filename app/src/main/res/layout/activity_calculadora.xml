<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Calculadora">


    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_weight="0"
        android:background="#FFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:maxLines="1"
        android:maxLength="10"/>

    <GridLayout
        android:id="@+id/Teclado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:padding="15dp"
        android:columnCount="4"   >

        <ImageView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/one"
            android:onClick="one"/>
        <ImageView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/two"
            android:onClick="two"/>
        <ImageView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/three"
            android:onClick="three"/>
        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/ce"
            android:onClick="clear"/>
        <ImageView
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/four"
            android:onClick="four"/>
        <ImageView
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/five"
            android:onClick="five"/>
        <ImageView
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/six"
            android:onClick="six"/>
        <ImageView
            android:id="@+id/menos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/menos"
            android:onClick="resta"/>
        <ImageView
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/seven"
            android:onClick="seven"/>
        <ImageView
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/eight"
            android:onClick="eight"/>
        <ImageView
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/nine"
            android:onClick="nine"/>
        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/plus"
            android:onClick="suma"/>
        <ImageView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/dot"
            android:onClick="dot"/>
        <ImageView
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/zero"
            android:onClick="zero"/>
        <ImageView
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/div"
            android:onClick="dividir"/>
        <ImageView
            android:id="@+id/multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/mult"
            android:onClick="multiplicar"/>
        <ImageView
            android:id="@+id/exponencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/e"
            android:onClick="exponencial"/>
        <ImageView
            android:id="@+id/raiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/raiz"
            android:onClick="raiz"/>
        <ImageView
            android:id="@+id/exponente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/potencia"
            android:onClick="exponente"/>
        <ImageView
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/equal"
            android:onClick="equals"/>
        <ImageView
            android:id="@+id/seno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/sen"
            android:onClick="seno"/>
        <ImageView
            android:id="@+id/coseno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/cos"
            android:onClick="coseno"/>
        <ImageView
            android:id="@+id/tan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/tan"
            android:onClick="tangente"/>
        <ImageView
            android:id="@+id/logaritmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/log"
            android:onClick="logaritmo"/>
        <ImageView
            android:id="@+id/arcosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/arcoseno"
            android:onClick="arcoSeno"/>
        <ImageView
            android:id="@+id/arcocos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/arcocoseno"
            android:onClick="arcoCoseno"/>
        <ImageView
            android:id="@+id/arcotan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:clickable="true"
            android:src="@drawable/arcotangente"
            android:onClick="arcoTangente"/>
    </GridLayout>

</LinearLayout>
